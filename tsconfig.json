{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "lib": [
      "es7"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}