{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "sourceMap": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "noEmit": true,
    "lib": [
      "es7"
    ]
  },
  "include": [
    "packages/**/*",
    "integration/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}